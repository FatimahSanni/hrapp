<h1>Listing Leave Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_types.each do |leave_type| %>
      <tr>
        <td><%= leave_type.name %></td>
        <td><%= leave_type.number_of_days %></td>
        <td><%= link_to 'Show', leave_type %></td>
        <td><%= link_to 'Edit', edit_leave_type_path(leave_type) %></td>
        <td><%= link_to 'Destroy', leave_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

