<h1>Listing Leave Rules</h1>

<table class="table">
  <thead>
    <tr>
      <th>Job category</th>
      <th>Days</th>
      <th>Employment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_rules.each do |leave_rule| %>
      <tr>
        <td><%= leave_rule.job_category %></td>
        <td><%= leave_rule.days %></td>
        <td><%= leave_rule.employment_type %></td>
        <td><%= link_to 'Show', leave_rule %></td>
        <td><%= link_to 'Edit', edit_leave_rule_path(leave_rule) %></td>
        <td><%= link_to 'Destroy', leave_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leave rule', new_leave_rule_path %>
