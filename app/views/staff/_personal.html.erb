<div class="form-group">
  <%= f.file_field :avatar %>
  <br>
  <%= f.label :hire_date %>
  <%= f.text_field :hire_date, class: "form-control", style: "width:15%" %>
  <span class="pull-right">
    <%= f.check_box :confirmed %>
    <%= f.label :confirmed %>
  </span>
</div>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :dob %>
  <%= f.text_field :dob, class: "form-control", style: "width:15%" %>
</div>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :marital_status %>
  <%= f.select :marital_status, Staff::Status, {prompt: "Choose Marital Status"}, {class: "form-control"} %>
</div>
<div class="form-group">
  <%= f.label :gender %>
  <%= f.select :gender, Staff::Gender, {prompt: "Select gender"}, {class: "form-control"} %>
</div>
<div class="form-group">
  <%= f.label :staff_status %>
  <%= f.select :staff_status, Staff::Employment, {}, {class: "form-control"} %>
</div>

<script>
  $('document').ready(function(){
    $('#staff_hire_date').datepicker({
      format: "dd/mm/yyyy"
    });
    $('#staff_dob').datepicker({
      format: "dd/mm/yyyy"
    });
  })
</script>