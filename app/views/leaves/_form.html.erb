<%= form_for(@leave) do |f| %>
  <% if @leave.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@leave.errors.count, "error") %> prohibited this leave from being saved:</h2>

      <ul>
      <% @leave.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :leave_type_id %>
    <%= f.collection_select :leave_type_id, LeaveType.all, :id, :name, {}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :staff_id %>
    <%= f.collection_select :staff_id, Staff.all, :id, :name, {}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :starts_at %>
    <%= f.text_field :starts_at, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :to %>
    <%= f.text_field :to, "data-provide" => "datepicker", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <% f.label :status %>
    <%= f.select :status, Leave::Status %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#leave_starts_at').datepicker(
      {format: "dd/mm/yyyy"}
      );
    $('#leave_to').datepicker(
      {format: "dd/mm/yyyy"}
      );
  });
</script>
