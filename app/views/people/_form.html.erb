    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control", rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :resume %>
    <%= f.file_field :resume, class: "form-control" %>
