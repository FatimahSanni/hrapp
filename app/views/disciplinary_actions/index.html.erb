<h1>Listing Disciplinary Actions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplinary_actions.each do |disciplinary_action| %>
      <tr>
        <td><%= disciplinary_action.name %></td>
        <td><%= link_to 'Show', disciplinary_action %></td>
        <td><%= link_to 'Edit', edit_disciplinary_action_path(disciplinary_action) %></td>
        <td><%= link_to 'Destroy', disciplinary_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Disciplinary action', new_disciplinary_action_path %>
