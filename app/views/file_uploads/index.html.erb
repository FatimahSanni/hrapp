<h1>Listing File Uploads</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>File</th>
      <th>File Size</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_uploads.each do |file_upload| %>
      <tr>
        <td><%= file_upload.name %></td>
        <td><%= link_to file_upload.upload_file_name, file_upload.upload.url %></td>
        <td><%= number_to_human_size(file_upload.upload_file_size) %></td>
        <td><%= file_upload.remark %></td>
        <td><%= link_to 'Show', file_upload %></td>
        <td><%= link_to 'Edit', edit_file_upload_path(file_upload) %></td>
        <td><%= link_to 'Destroy', file_upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

